##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
MPG_HOME    = .
CC          = @CC@
CLINKER     = @CLINKER@
CCC         = $(CC)
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = $(F77)
AR          = @AR@
RANLIB      = @RANLIB@
PROFILING   = $(PMPILIB)
LIB_PATH    = -L$(MPG_HOME) @LIB_PATH@
FLIB_PATH   = -L$(MPG_HOME) @FLIB_PATH@
LIB_LIST    = @LIB_LIST@
#
INCLUDE_DIR = @INCLUDE_PATH@ \
             -I$(MPG_HOME) \
	     -I$(MPIR_HOME)/include \
	     -I/usr/local/mpi/mpich/include \
             -I$(EPIC4_PATH)/include \
             -I$(MPIR_HOME)/include
	     

DEVICE      = @DEVICE@

### End User configurable options ###

C_FLAGS	  = @CFLAGS@ $(INCLUDE_DIR) -DMPI_$(ARCH)
CCFLAGS	  = $(CFLAGS)
F_FLAGS	  = @FFLAGS@ $(INCLUDE_DIR)
MPILIB	  = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi.a 
MPIPPLIB  = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi++.a
LIBS	  = $(LIB_PATH) $(LIB_LIST)
FLIBS	  = $(FLIB_PATH) $(LIB_LIST)
LIBSPP	  = $(MPIPPLIB) $(LIBS)

