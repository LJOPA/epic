       map_wslice.o map_rslab.o map_wslab.o map_edge.o \
       map_util.o mpich_decomp.o
	
libmpg.a: $(OBJS)
	$(AR) libmpg.a $(OBJS)

install: libmpg.a
	$(RANLIB) libmpg.a
clear:
	/bin/rm -f *.o *~ *.BAK 

.c.o:
	$(CC)  $(C_FLAGS) -c $*.c
.f.o:
	$(F77) $(F_FLAGS) -c $*.f


